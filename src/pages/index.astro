---
import Layout from '~/layouts/PageLayout.astro';
import ScrollStory from '~/components/widgets/ScrollStory.astro';
import SelectedWorks from '~/components/widgets/SelectedWorks.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';

import heroImage from '~/assets/images/hero-nicholas.jpg';

const metadata = {
  title: 'Nicholas Nadeau',
};
---

<Layout metadata={metadata}>
  <!-- Scroll-driven Story -->
  <ScrollStory
    id="hero"
    image={{
      src: heroImage,
      alt: 'Nicholas Nadeau',
    }}
  />

  <!-- Selected Works / Latest Posts -->
  <SelectedWorks id="works" title="Selected" subtitle="NEW & RECENT">
    <BlogLatestPosts title="" information="" />
  </SelectedWorks>
</Layout>
